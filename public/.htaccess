# Performance Optimizations

# Sitemap Proxy Rules - Redirect sitemap requests to Supabase Edge Functions
<IfModule mod_rewrite.c>
  RewriteEngine On
  
  # Main sitemap
  RewriteRule ^sitemap\.xml$ https://cpaukwimbfoembwwtqhj.supabase.co/functions/v1/sitemap [P,L]
  
  # Individual sitemaps
  RewriteRule ^sitemap-pages\.xml$ https://cpaukwimbfoembwwtqhj.supabase.co/functions/v1/sitemap-pages [P,L]
  RewriteRule ^sitemap-casinos\.xml$ https://cpaukwimbfoembwwtqhj.supabase.co/functions/v1/sitemap-casinos [P,L]
  RewriteRule ^sitemap-blogs\.xml$ https://cpaukwimbfoembwwtqhj.supabase.co/functions/v1/sitemap-blogs [P,L]
  RewriteRule ^sitemap-bonuses\.xml$ https://cpaukwimbfoembwwtqhj.supabase.co/functions/v1/sitemap-bonuses [P,L]
  RewriteRule ^sitemap-news\.xml$ https://cpaukwimbfoembwwtqhj.supabase.co/functions/v1/sitemap-news [P,L]
  RewriteRule ^sitemap-static\.xml$ https://cpaukwimbfoembwwtqhj.supabase.co/functions/v1/sitemap-static [P,L]
  RewriteRule ^sitemap-complaints\.xml$ https://cpaukwimbfoembwwtqhj.supabase.co/functions/v1/sitemap-complaints [P,L]
  RewriteRule ^sitemap-images\.xml$ https://cpaukwimbfoembwwtqhj.supabase.co/functions/v1/sitemap-images [P,L]
</IfModule>

# Enable compression
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json application/xml
</IfModule>

# Leverage browser caching
<IfModule mod_expires.c>
  ExpiresActive On
  
  # Images
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/jpg "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  
  # CSS and JavaScript
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"
  ExpiresByType text/javascript "access plus 1 month"
  
  # Fonts
  ExpiresByType font/woff2 "access plus 1 year"
  ExpiresByType font/woff "access plus 1 year"
  ExpiresByType font/ttf "access plus 1 year"
  
  # HTML
  ExpiresByType text/html "access plus 0 seconds"
</IfModule>

# Set cache control headers
<IfModule mod_headers.c>
  # Cache static assets
  <FilesMatch "\.(ico|jpg|jpeg|png|gif|webp|svg|css|js|woff2|woff|ttf)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>
  
  # Don't cache HTML
  <FilesMatch "\.(html|htm)$">
    Header set Cache-Control "no-cache, no-store, must-revalidate"
    Header set Pragma "no-cache"
    Header set Expires 0
  </FilesMatch>
</IfModule>
