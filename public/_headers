# Security and Performance Headers
# World-class configuration for production

# Global headers for all pages
/*
  # Security Headers
  X-Frame-Options: SAMEORIGIN
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  
  # Permissions Policy (Feature Policy)
  Permissions-Policy: accelerometer=(), camera=(), geolocation=(), gyroscope=(), magnetometer=(), microphone=(), payment=(), usb=()
  
  # Content Security Policy (CSP)
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://www.googletagmanager.com https://www.google-analytics.com https://cpaukwimbfoembwwtqhj.supabase.co; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com data:; img-src 'self' data: https: blob:; connect-src 'self' https://cpaukwimbfoembwwtqhj.supabase.co https://www.google-analytics.com https://storage.googleapis.com; frame-src 'self'; object-src 'none'; base-uri 'self'; form-action 'self'; frame-ancestors 'self';
  
  # Strict Transport Security (HSTS)
  Strict-Transport-Security: max-age=63072000; includeSubDomains; preload
  
  # Cache Control for HTML (no cache)
  Cache-Control: public, no-cache, must-revalidate
  
  # Server identification (hide server info)
  X-Powered-By: 
  Server: 

