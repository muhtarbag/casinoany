# Security and Performance Headers
# Optimized for PageSpeed testing and security

# Global headers for all pages
/*
  # Security Headers
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  
  # Permissions Policy (Feature Policy)
  Permissions-Policy: accelerometer=(), camera=(), geolocation=(), gyroscope=(), magnetometer=(), microphone=(), payment=(), usb=()
  
  # Relaxed CSP for PageSpeed compatibility
  Content-Security-Policy: default-src * 'unsafe-inline' 'unsafe-eval'; script-src * 'unsafe-inline' 'unsafe-eval'; style-src * 'unsafe-inline'; img-src * data: blob:; font-src * data:; connect-src *; frame-src *; object-src 'none';
  
  # Strict Transport Security (HSTS)
  Strict-Transport-Security: max-age=63072000; includeSubDomains; preload
  
  # Cache Control for HTML (no cache)
  Cache-Control: public, no-cache, must-revalidate
  
  # Server identification (hide server info)
  X-Powered-By: 
  Server:

# Static assets - aggressive caching
/assets/*
  Cache-Control: public, max-age=31536000, immutable
  
/logos/*
  Cache-Control: public, max-age=31536000, immutable

/*.js
  Cache-Control: public, max-age=31536000, immutable
  
/*.css
  Cache-Control: public, max-age=31536000, immutable

# Images - long cache
/*.jpg
  Cache-Control: public, max-age=31536000, immutable
  
/*.jpeg
  Cache-Control: public, max-age=31536000, immutable
  
/*.png
  Cache-Control: public, max-age=31536000, immutable
  
/*.webp
  Cache-Control: public, max-age=31536000, immutable
  
/*.svg
  Cache-Control: public, max-age=31536000, immutable
  
/*.gif
  Cache-Control: public, max-age=31536000, immutable

# Fonts - long cache
/*.woff2
  Cache-Control: public, max-age=31536000, immutable
  Access-Control-Allow-Origin: *
  
/*.woff
  Cache-Control: public, max-age=31536000, immutable
  Access-Control-Allow-Origin: *
  
/*.ttf
  Cache-Control: public, max-age=31536000, immutable
  Access-Control-Allow-Origin: *

# Manifest and service worker - short cache
/manifest.json
  Cache-Control: public, max-age=86400
  
/sw.js
  Cache-Control: public, max-age=0, must-revalidate

# Favicon
/favicon.ico
  Cache-Control: public, max-age=604800

# Sitemap - cache for 1 hour
/sitemap*.xml
  Cache-Control: public, max-age=3600
  Content-Type: application/xml; charset=utf-8

# Robots.txt - cache for 1 day
/robots.txt
  Cache-Control: public, max-age=86400
  Content-Type: text/plain; charset=utf-8